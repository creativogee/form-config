    "url": "git+https://github.com/creativogee/form-config.git"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
